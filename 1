YTButton.TextWrapped = true
YTButton.MouseButton1Down:Connect(function()
    -- Copy the YouTube link to the clipboard
    setclipboard("https://youtube.com/@hyperfanny?si=F3Wo5bXfQpUuyw3p")
end)

-- Make the Open button draggable
Open.MouseButton1Down:Connect(function()
    local userInputService = game:GetService("UserInputService")
    local startPos = userInputService:GetMouse().Position
    local startGuiPos = main.Position

    userInputService.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = userInputService:GetMouse().Position - startPos
            main.Position = UDim2.new(startGuiPos.X.Scale, startGuiPos.X.Offset + delta.X, startGuiPos.Y.Scale, startGuiPos.Y.Offset + delta.Y)
        end
    end)
end)

-- RunService Logic
game:GetService('RunService').RenderStepped:connect(function()
    for i,v in next, game:GetService('Players'):GetPlayers() do
        if v.Name ~= game:GetService('Players').LocalPlayer.Name then
            if v.Character and v.Character:FindFirstChild("HumanoidRootPart") then
                v.Character.HumanoidRootPart.Size = Vector3.new(tonumber(HitBox.Text) or 1, tonumber(HitBox.Text) or 1, tonumber(HitBox.Text) or 1) -- Use tonumber to ensure valid number
                v.Character.HumanoidRootPart.Transparency = 0.8
                v.Character.HumanoidRootPart.Color = Color3.new(
                    tonumber(Red.Text) or 0,
                    tonumber(Green.Text) or 0,
                    0 -- No Blue since it's been removed
                )
                v.Character.HumanoidRootPart.Material = "Neon"
                v.Character.HumanoidRootPart.CanCollide = false
            end
        end
    end
end)
